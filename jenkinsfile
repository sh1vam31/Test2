pipeline {
    agent any

    stages {

        stage('check out'){
            steps{
            git url: 'https://github.com/sh1vam31/DevopsClass.git', branch:'main'
        }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package' 
            }
        }

        stage('test'){
            steps{
                sh 'mvn test'
            }
        }

        stage('deploy'){
            steps{
                sh './deploy.sh'
            }  
        }
    }
}